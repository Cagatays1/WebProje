@model IEnumerable<Doctor>
<div class="row">
    <div class="col-md-9">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Doctor Adı</th>
                    <th>Doctor Soyadı</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dctr in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="\images\doctor-logo-icon-design-vector-15613661.jpg"
                                     alt=""
                                     style="width: 45px; height: 45px"
                                     class="rounded-3" />
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@dctr.DoctorName</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">Doktor İsmi:@dctr.DoctorName  @dctr.DoctorSurname </p>
                            <p class="text-muted mb-0">Poliklinik: @dctr.Policlinic.Name</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>